<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Di algo
</h4>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
           <%= render @messages %>
        </div>
      </div>
        <%-#Controla en ingreso de mensajes -%>
        <div class="extra content">
            <form class="ui reply form">
            <div class="field">
                <div class="ui fluid icon input">
                <input type="text" placeholder="Ingrese un mensaje ...">
                <i class="bordered inverted orange edit icon"></i>
                </div>
            </div>
            </form>
        </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Inicio
          </a>
          <a class="item">
            Mensajes
          </a>
          <a class="item">
            Amigos
          </a>
        </div>
      </div>
    </div>
  </div>
</div>